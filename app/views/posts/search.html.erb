<div id="posts">
<p id="intro">Search Results
<br/>
	<span>We found <%= pluralize(@posts.length, "Makr project") %></span>
</p>

<div class="row">
	<% @posts.each do |post| %>
	<div class="col-md-4 post">
		<div class="panel panel-default">
			<div class="panel-body">
				<div class="post_image">
				<%= link_to (image_tag post.image.url(:medium)), post %>
				</div>
				<div class="post_content">
					<div class="title">
						<h2><%= link_to post.title, post %></h2>
					</div>
					<div class="data">
						<p class="username">Posted by <%= post.user.name %></p>
						<p class="buttons">
							<span>
								<i class="fa fa-comments-o"></i>
								<%= post.comments.count %>
							</span>
							<span>
								<i class="fa fa-thumbs-o-up"></i>
								<%= post.get_likes.size %>
							</span>
						</p>
					</div>
				</div>
			</div>
		</div>
	</div>
	<% end %>
</div>
<div class="row">
	<%= render "layouts/pagination" %>
</div>